<h2>お問い合わせ内容確認</h2>

<div>
  名前：<%= @contact.name %>
</div>
<div>
  メールアドレス：<%= @contact.email %>
</div>
<div>
  カテゴリー：<%= @contact.radio %>
</div>  
<div>
  内容：<%= @contact.content %>
</div>



<%= form_for @contact, url: contacts_done_path do |f| %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :email %>
  <%= f.hidden_field :radio %>
  <%= f.hidden_field :content %>
  <div><%= f.submit '送信' %></div>
<% end %>
<%= form_for @contact, url: contacts_back_path do |f| %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :email %>
  <%= f.hidden_field :radio %>
  <%= f.hidden_field :content %>
  <div><%= f.submit '入力画面に戻る' %></div>
<% end %>